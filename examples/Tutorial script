#Tutorial script

####Usecase 1#####
cd <path>/SimText

$RScript T2_pubmedsearch_by_pmid.R \
 --input "tutorial_usecases/data/1/Researcher_testdata.txt" \
 --output "tutorial_usecases/data/1/T2_result"

$RScript T4_text_to_wordcountmatrix.R \
 --input "tutorial_usecases/data/1/T2_result" \
 --output "tutorial_usecases/data/1/Researcher_testdata_matrix" \
 --number 100

$RScript T6_SimTextApp.R \
 --input "tutorial_usecases/data/1/Researcher_testdata.txt" \
 --matrix "tutorial_usecases/data/1/Researcher_testdata_matrix"


####Usecase 2a#####
cd <path>/SimText
#e.g: $cd Dropbox/LAL_PROJECTS/RESEARCH_PORTAL/SimText

$RScript T1_pubmedsearch_by_keyword.R \
 --input "tutorial_usecases/data/2a/clingen_testdata" \
 --output "tutorial_usecases/data/2a/T1_result" \
 --number 10 \
 --key "15f2fa5c9d427fd88d53b5041002aeabd309"

$RScript T3_pmids_to_pubtator_matrix.R \
 --input "tutorial_usecases/data/2a/T1_result"  \
 --output "tutorial_usecases/data/2a/clingen_testdata_matrix" \
 --categories Diseases Genes

$RScript T5_dimreduction_of_wordcountmatrix.R \
 --input "tutorial_usecases/data/2a/clingen_testdata" \
 --matrix "tutorial_usecases/data/2a/clingen_testdata_matrix"

$RScript T6_SimTextApp.R \
 --input "tutorial_usecases/data/2a/clingen_testdata" \
 --matrix "tutorial_usecases/data/2a/clingen_testdata_matrix"

####Usecase 2b#####
#cd <path>/SimText
$cd Dropbox/LAL_PROJECTS/RESEARCH_PORTAL/SimText

$RScript T1_pubmedsearch_by_keyword.R \
 --input "tutorial_usecases/data/2b/clingen_testdata" \
 --output "tutorial_usecases/data/2a/T1_result" \
 --number 20 \
 --key "15f2fa5c9d427fd88d53b5041002aeabd309" \
 --abstract 

$RScript T4_text_to_wordcountmatrix.R \
 --input "tutorial_usecases/data/2b/T1_result" \
 --output "tutorial_usecases/data/2b/clingen_testdata_matrix" \
 --number 50 \
 --stemDoc

$RScript T5_dimreduction_of_wordcountmatrix.R \
 --input "tutorial_usecases/data/2b/clingen_testdata" \
 --matrix "tutorial_usecases/data/2b/clingen_testdata_matrix" \
 --perplexity 2 \
 --textsize 3

$RScript T6_SimTextApp.R \
 --input "tutorial_usecases/data/2b/clingen_testdata" \
 --matrix "tutorial_usecases/data/2b/clingen_testdata_matrix"























